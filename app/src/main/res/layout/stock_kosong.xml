<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="170dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="170dp"
                android:src="@drawable/cocacola"
                android:layout_height="170dp"/>
            <LinearLayout
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <TextView
                    android:id="@+id/judulProduct"
                    android:text="Floridina Orange Coco Orange Cococ"
                    android:textSize="28sp"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:fontFamily="@font/extrabold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/stockProduct"
                    android:layout_marginTop="10dp"
                    android:text="Stock : Kosong"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:id="@+id/buttonUpdateStock"
                    android:layout_marginTop="10dp"
                    android:text="Update Stock"
                    android:maxLines="1"
                    android:fontFamily="@font/bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_height="45dp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>